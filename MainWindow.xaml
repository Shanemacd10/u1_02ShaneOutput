<Window x:Class="u1_02ShaneOutput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u1_02ShaneOutput"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label Content="Label"/>
            
            <TextBox x:Name="entryName" Height="23" TextWrapping="Wrap" Text="Enter Your Name Here" TextChanged="TextBox_TextChanged_1"/>
        
            <Button Content="Button"
                    x:Name="btnShowGreeting"
                    Click="btnShowGreeting_Click"/>
            <Label x:Name="lblOutput"/>

        </StackPanel>
    </Grid>
</Window>
